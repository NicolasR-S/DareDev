@model IEnumerable<EssenceDeals.Models.Area>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" style="text-decoration:none" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodArea">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodArea">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodArea">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
